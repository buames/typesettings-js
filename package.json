{
  "name": "typesettings-js",
  "version": "0.0.10",
  "description": "A quest for consistency",
  "main": "./dist/typesettings-js.cjs.js",
  "module": "./dist/typesettings-js.esm.js",
  "browser": "./dist/typesettings-js.umd.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "postbuild": "yarn dts-bundle-generator -o ./dist/index.d.ts ./dist/src/index.d.ts",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "tslint src/**/*.ts --project tsconfig.json",
    "test": "nyc ava",
    "test:size": "bundlesize",
    "test:codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "release:canary": "yarn version --tag canary",
    "release:changelog": "release --pre",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "deepmerge": "^3.1.0"
  },
  "devDependencies": {
    "@types/rollup-plugin-commonjs": "^9.2.0",
    "@types/rollup-plugin-node-resolve": "^4.0.0",
    "ava": "^1.2.1",
    "bundlesize": "^0.17.1",
    "codecov": "^3.1.0",
    "dts-bundle-generator": "^2.0.0",
    "esm": "^3.2.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "nyc": "^13.2.0",
    "release": "^6.0.0",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "ava": {
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "ts-node/register"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "dist",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "dist/typesettings-js.umd.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.cjs.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.esm.js",
      "maxSize": "1.5 kb"
    }
  ],
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": "https://github.com/buames/typesettings-js",
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
