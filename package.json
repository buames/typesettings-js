{
  "name": "typesettings-js",
  "version": "0.0.6-canary.0",
  "description": "A quest for consistency",
  "main": "dist/typesettings-js.cjs.js",
  "module": "dist/typesettings-js.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn rollup && yarn rollup:umd",
    "watch": "rollup -c rollup.config.js --watch",
    "test": "yarn build && yarn lint && yarn size",
    "rollup": "rollup -c rollup.config.js",
    "rollup:umd": "UMD=true rollup -c rollup.config.js",
    "lint": "eslint --ext .js src",
    "size": "bundlesize",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "deepmerge": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-eslint": "10.0.1",
    "bundlesize": "^0.17.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-watch": "^4.3.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "dist/index.umd.min.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.cjs.js",
      "maxSize": "2 kb"
    },
    {
      "path": "dist/typesettings-js.esm.js",
      "maxSize": "2 kb"
    }
  ],
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": "https://github.com/buames/typesettings-js",
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
