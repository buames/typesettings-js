{
  "name": "typesettings-js",
  "version": "0.1.11",
  "description": "A quest for consistency",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "test": "nyc ava",
    "lint": "yarn run eslint --ext .ts src",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && npx codecov",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "csstype": "^2.6.3"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.10",
    "@postmates/eslint-config": "^4.0.1",
    "@types/node": "^11.13.4",
    "@types/react": "^16.8.13",
    "@types/rollup-plugin-node-resolve": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "esm": "^3.2.22",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "react": "^16.8.6",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "ava": {
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "ts-node/register"
    ]
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "node_modules/**",
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": "https://github.com/buames/typesettings-js",
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
