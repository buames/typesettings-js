{
  "name": "typesettings-js",
  "version": "0.1.9",
  "description": "A quest for consistency",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "postbuild": "yarn run types",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "types": "yarn dts-bundle-generator -o ./dist/index.d.ts ./dist/gen-types/index.d.ts",
    "lint": "tslint src/**/*.ts --project tsconfig.json",
    "test": "nyc ava",
    "test:size": "bundlesize",
    "test:codecov": "nyc report --reporter=lcov > coverage.lcov && npx codecov",
    "bench": "node bench",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "csstype": "^2.6.3"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.10",
    "@types/node": "^11.11.6",
    "@types/rollup-plugin-node-resolve": "^4.0.0",
    "ava": "^1.3.1",
    "benchmark": "^2.1.4",
    "bundlesize": "^0.17.1",
    "dts-bundle-generator": "^2.1.0",
    "esm": "^3.2.18",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "react": "^16.8.6",
    "rollup": "^1.6.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.20.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3333"
  },
  "ava": {
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "ts-node/register"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "dist",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "dist/index.js",
      "maxSize": "1 kb"
    },
    {
      "path": "dist/index.es.js",
      "maxSize": "1 kb"
    }
  ],
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": "https://github.com/buames/typesettings-js",
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
